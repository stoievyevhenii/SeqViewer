@using Microsoft.FluentUI.AspNetCore.Components
@using SeqViewer.Components
@inherits LayoutComponentBase

<div class="main">
    <div class="header">
        <Header />
    </div>
    <FluentStack Orientation="Orientation.Horizontal" Width="100%">
        <div>
            <FluentNavMenu @bind-Expanded="@Expanded" Width="300" Collapsible="true" Title="Collapsible demo">
                <FluentNavLink Icon="@(new Icons.Regular.Size24.DocumentLightning())" Tooltip="Events tooltip" OnClick="@((e) => OnMenuItemClick("events"))">Events</FluentNavLink>
            </FluentNavMenu>
        </div>
        <div class="body">
            @switch (status)
            {
                case "events":
                    <SeqViewer.Components.Pages.Events />
                    break;
            }
        </div>
    </FluentStack>
</div>

<FluentToastProvider />
<FluentDialogProvider />
<FluentTooltipProvider />
<FluentMessageBarProvider />

@code {
    bool Expanded = false;
    private string status = "events";

    private void OnMenuItemClick(string id)=> status = id;
}
